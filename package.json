{
  "name": "fastmcp",
  "version": "1.0.0",
  "main": "src/FastMCP.ts",
  "types": "src/FastMCP.ts",
  "scripts": {
    "build": "tsup",
    "test": "vitest run && tsc && jsr publish --dry-run",
    "format": "prettier --write . && eslint --fix ."
  },
  "keywords": [
    "MCP",
    "SSE"
  ],
  "type": "module",
  "author": "Frank Fiegel <frank@glama.ai>",
  "license": "MIT",
  "description": "A TypeScript framework for building MCP servers.",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.0",
    "execa": "^9.5.2",
    "file-type": "^19.6.0",
    "fuse.js": "^7.0.0",
    "mcp-proxy": "^2.4.0",
    "strict-event-emitter-types": "^2.0.0",
    "uri-templates": "^0.2.0",
    "yargs": "^17.7.2",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "repository": {
    "url": "https://github.com/punkpeye/fastmcp"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@sebbo2002/semantic-release-jsr"
    ]
  },
  "devDependencies": {
    "@sebbo2002/semantic-release-jsr": "^2.0.2",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.10.5",
    "@types/uri-templates": "^0.1.34",
    "@types/yargs": "^17.0.33",
    "eslint": "^9.17.0",
    "eslint-plugin-perfectionist": "^4.6.0",
    "get-port-please": "^3.1.2",
    "jsr": "^0.13.2",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "tsup": {
    "entry": [
      "src/FastMCP.ts",
      "src/bin/fastmcp.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "splitting": true,
    "sourcemap": true,
    "clean": true
  }
}
